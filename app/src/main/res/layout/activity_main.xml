<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9e1e7"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context="com.example.administrator.pokerdemo.MainActivity">

    <RelativeLayout
        android:id="@+id/rel_text"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/label_shuffle"
            android:layout_width="match_parent"
            android:elevation="@dimen/_4sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:padding="@dimen/_8sdp"
            android:gravity="center"
            android:background="#33ffa3"
            android:text="Shuffle"
            android:textColor="#fff"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:id="@+id/shuffle_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_280sdp"
            android:layout_below="@id/label_shuffle"
            android:layout_margin="@dimen/_4sdp"
            android:background="#33ffa3"
            android:hint="       Shuffle Result"
            android:elevation="@dimen/_4sdp"
            android:maxLines="100"
            android:padding="@dimen/_8sdp"
            android:scrollbars="vertical"
            android:textColor="#fff"
            android:textSize="@dimen/_14sdp" />
        <Button
            android:id="@+id/button_shuffle"
            style="android:style/Widget.Material.Button"
            android:layout_below="@id/shuffle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/shape1"
            android:elevation="@dimen/_4sdp"
            android:text="Shuffle\nButton"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12sdp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_text2"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/label_deal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:padding="@dimen/_8sdp"
            android:gravity="center"
            android:elevation="@dimen/_4sdp"
            android:background="#ffa033"
            android:text="Deal"
            android:textColor="#fff"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:id="@+id/deal_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_280sdp"
            android:hint="          Deal Result"
            android:layout_below="@id/label_deal"
            android:layout_margin="@dimen/_4sdp"
            android:background="#ffa033"
            android:elevation="@dimen/_4sdp"
            android:maxLines="100"
            android:padding="@dimen/_8sdp"
            android:scrollbars="vertical"
            android:textColor="#fff"
            android:textSize="@dimen/_14sdp" />

        <Button
            android:id="@+id/button_deal"
            style="android:style/Widget.Material.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:layout_below="@id/deal_text"
            android:background="@drawable/shape2"
            android:elevation="@dimen/_4sdp"
            android:text="Deal\nButton"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

</LinearLayout>


